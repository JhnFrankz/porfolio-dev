---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    date: "Actualmente...",
    title: "Desarrollo de Proyectos Personales",
    description:
      "Desarrollo de proyectos personales y colaboraciones con otros desarrolladores. Creación de aplicaciones web con tecnologías como Astro, React, Spring Boot entre otras.",
    link: "#",
  },
  {
    date: "Septiembre 2022",
    title: "Principal Frontend Engineer",
    description:
      "Responsable de la plataforma, componentes y utilidades para la creación y desarrollo de aplicaciones web. Mejora de un 30% en la entrega de software. Implantación de medidas de integración continua y despliegue con A/B testing en más de 15 equipos de desarrollo.",
  },
  {
    date: "Diciembre 2021",
    title: "Asistente de Soporte Técnico",
    description:
      "Soporte técnico a usuarios de la plataforma de gestión de contenidos. Creación de documentación y guías de uso. Formación de nuevos empleados en el uso de la plataforma.",
  },
];
---

<ol class="relative border-s border-gray-200 ml-3">
  {
    EXPERIENCE.map((experience) => (
      <li class="mb-10 ms-4">
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
