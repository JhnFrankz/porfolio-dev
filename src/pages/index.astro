---
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";

import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";

import Layout from "../layouts/Layout.astro";
---

<Layout title="Porfolio de JhnFrankz - Desarrollador y Programador Web">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full w-12 h-12 mb-4"
        src="https://i.ibb.co/FhPKkGd/Frank.jpg"
        alt="Midudev photo"
      />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
        Hey, soy JhnFrankz <a
          href="https://www.linkedin.com/in/jhanfrankespinozaescudero/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span>Experiencia en proyectos personales.</span>
        <span class="text-yellow-200/90"
          >Ingeniero de Sistemas y Desarrollador web</span
        >
        .<span class="text-red-200/90"> De Ica, Perú</span>.
        <span class="opacity-75"
          >Especializado en crear aplicaciones únicas.</span
        >
      </h2>

      <nav class="flex gap-x-4 mt-8">
        <SocialPill
          href="https://www.linkedin.com/in/jhanfrankespinozaescudero"
        >
          <LinkedInIcon class="w-6 h-6" />
          LinkedIn
        </SocialPill>

        <SocialPill href="https://github.com/JhnFrankz">
          <GitHubIcon class="w-6 h-6" />
          GitHub
        </SocialPill>

        <SocialPill href="https://github.com/JhnFrankz">
          <MailIcon class="w-6 h-6" />
          jhnfrankz@gmail.com
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>
